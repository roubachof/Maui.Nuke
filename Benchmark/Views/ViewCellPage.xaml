<?xml version="1.0" encoding="utf-8" ?>
<profiler:ProfilerPage x:Class="Benchmark.Views.ViewCellPage"
                       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                       xmlns:profiler="clr-namespace:Benchmark.Profiler;assembly=Benchmark"
                       Title="CollectionView">
    <CollectionView ItemSizingStrategy="MeasureFirstItem" ItemsSource="{Binding}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Grid HeightRequest="60" ColumnSpacing="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Label HorizontalTextAlignment="Center"
                           VerticalTextAlignment="Center"
                           Text="Smooth, baby" />
                    <Image Grid.Column="1" Source="{Binding}" />
                    <Image Grid.Column="2" Source="{Binding}" />
                    <Image Grid.Column="3" Source="{Binding}" />
                </Grid>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</profiler:ProfilerPage>
