<?xml version="1.0" encoding="utf-8" ?>
<profiler:ProfilerPage 
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:profiler="clr-namespace:ImageSourceHandlers.Forms.Sample.Profiler;assembly=ImageSourceHandlers.Forms.Sample"
    x:Class="ImageSourceHandlers.Forms.Sample.Views.ImageCellPage"
    Title="ImageCells">
    <ListView ItemsSource="{Binding}" CachingStrategy="RecycleElement">
        <ListView.ItemTemplate>
            <DataTemplate>
                <ImageCell Text="Smooth, baby" ImageSource="{Binding}" />
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</profiler:ProfilerPage>